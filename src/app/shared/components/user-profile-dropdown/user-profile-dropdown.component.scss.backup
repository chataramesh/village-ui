/* Responsive Design */
@media (max-width: 768px) {
  .user-profile-btn {
    padding: 6px 10px;
    gap: 8px;
    min-height: 40px;

    .user-info {
      .user-name {
        font-size: 12px;
      }

      .user-role {
        font-size: 9px;
      }
    }
  }

  .user-avatar {
    width: 28px;
    height: 28px;

    .avatar-placeholder {
      font-size: 11px;
    }
  }

  .dropdown-arrow {
    width: 14px;
    height: 14px;

    svg {
      width: 10px;
      height: 10px;
    }
  }

  .user-profile-dropdown {
    width: 200px;
    min-width: 180px;
    right: -8px;
  }

  .dropdown-menu {
    padding: 6px;
    background: #ffffff;

    .dropdown-menu-item {
      padding: 10px 12px;
      gap: 10px;
      background: transparent;
      margin-bottom: 2px;

      &:hover {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      }

      &:active {
        background: #f3f4f6;
      }

      &:last-child {
        margin-bottom: 0;
      }
    }
  }

  .dropdown-footer {
    padding: 10px 12px;
    border-top: 1px solid #f3f4f6;
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);

    .logout-btn {
      padding: 8px 12px;
