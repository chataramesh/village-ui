    &:hover .menu-item-icon {
      color: #374151;
    }

    .menu-item-content {
      flex: 1;
      min-width: 0;

      .menu-item-title {
        display: block;
        font-size: 14px;
        font-weight: 500;
        color: #111827;
        margin: 0 0 2px 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: color 0.15s ease;
      }

      .menu-item-desc {
        display: block;
